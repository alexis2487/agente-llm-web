---
/* Importa el CSS global generado por Tailwind */
import "../styles/global.css";

/* Lee la variable pública desde .env (si existe) */
const proxy = import.meta.env.PUBLIC_PROXY_URL || null;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <title>Agente LLM — CV</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <main class="max-w-3xl mx-auto p-6">
      <h1 class="text-2xl font-bold mb-4">✅ Sitio OK (Fase 0)</h1>
      <p class="mb-2">Este sitio fue generado con Astro + Tailwind.</p>

      <div class="mt-4 p-4 rounded-xl bg-white shadow">
        <h2 class="font-semibold mb-2">Configuración</h2>
        <p>
          PUBLIC_PROXY_URL:
          <strong>{proxy ? proxy : "No configurado"}</strong>
        </p>
        <p class="text-sm text-gray-500 mt-2">
          Crea un archivo <code>.env</code> en <code>apps/site</code> para definirlo.
        </p>
      </div>

      <p class="mt-6 text-sm text-gray-500">El chat llegará en Fase 1.</p>
    </main>
  </body>
</html>
